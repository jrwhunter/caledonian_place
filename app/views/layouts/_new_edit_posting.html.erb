<div class="row">
  <div class="span6 offset3">
    <%= form_for(@posting) do |f| %>
      <%= render(:partial => "shared/error_messages", :object => @posting) %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :content%>
      <%= f.text_area :content , :size => "25x10"%>

      <p class="padding">Now save the posting:
      <%= f.submit "Save", class: "btn btn-large btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
