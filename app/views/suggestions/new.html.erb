<% provide(:title, 'New Suggestion') %>
<style>
p.padding
{
padding-top:50px;
}
</style>


<h1>New Suggestion</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@suggestion) do |f| %>
      <%= render 'shared/error_messages' %>

      Your name
      <%= f.text_field :name %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label 'Choose:' %>

      <%= f.radio_button :suggestion_type, 'book_group' %>
      My suggestion is likely to promote discussion at the book group.
      <br>
      

      <%= f.radio_button :suggestion_type, 'read_only' %>
      I just think others would like to read it.

      <p class="padding">Now submit your suggestion:
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
