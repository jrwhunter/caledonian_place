<% provide(:title, 'New Suggestion') %>
<h1>New Suggestion</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@suggestion) do |f| %>
      <%= render 'shared/error_messages' %>

      Your name
      <%= f.text_field :name %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.submit "Create your new suggestion", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
