<% provide(:title, 'Postings') %>

<h1>Postings</h1>

<table class="table table-striped">  
	<tr>
		<td><b>DATE</b></td>
		<td><b>AUTHOR</b></td>
		<td><b>CONTENT</b></td>
		<td></td>
    	<td></td>
	</tr>

	<% @postings.each do |posting| %>
    <tr>
      <td><%= posting.updated_at.strftime("%d %B %Y")%></td>
      <td><%= posting.author %></td>
      <td><%= posting.content%></td>
      <td><%= link_to "edit", edit_posting_path(posting.id)%></td>
      <td><%= link_to "delete", posting, method: :delete,
                                  data: { confirm: "You sure?" } %></td>
    </tr>
  <% end %>
</table>